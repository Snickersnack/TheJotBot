<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
<session-factory>
    <property name="hibernate.connection.driver_class">org.postgresql.Driver</property>
    <property name="hibernate.connection.url">jdbc:postgresql://localhost:5432/JotBot</property>
    <property name="hibernate.dialect">org.hibernate.dialect.PostgreSQLDialect</property>
    <property name="show_sql">false</property>
    <mapping class="org.wilson.theJotBot.Models.JotModel" />
    <mapping class="org.wilson.theJotBot.Models.User" />
    <mapping class="org.wilson.theJotBot.Models.InProgressRemind" />

    
    
    
</session-factory>

</hibernate-configuration>